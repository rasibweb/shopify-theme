{% assign product = all_products[section.settings.product] %}

{% comment %} <div>
    <a href="{{product.url}}">
    <img src="{{ product.featured_image | image_url: width:400 }}">
    <h3>{{ product.title }}</h3>
    <p>{{ product.price | money }}</p>
</div> {% endcomment %}

<div>
    <h2>{{ section.settings.heading }}</h2>
    <h3>{{ product.title }}</h3>
    <a href="{{ product.url }}">View Product</a>
</div>

{% schema %}
{
    "name": "Featured Product",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading Text"
        },
        {
            "type": "product",
            "id": "product",
            "label": "Product"
        }
    ],
    "presets": [
        {
         "name": "Featured Product" ,
         "settings": {
            "heading": "Checkout this product"
         }  
        }
    ]
}
{% endschema %}