<header  class="header">
    <h1>{{ shop.name }}</h1>
    <ul>
        <!-- Main menu -->
        {% for link in linklists.main-menu.links -%}
            <li>{{ link.title | link_to: link.url }}</li>
        {%- endfor %}
    </ul>
    {% if section.settings.show_search %}
        <form action="/search">
            <input type="search" name="q">
            <button type="submit">Search</button>
        </form>
    {% endif %}
</header>

<style type="text/css" rel="stylesheet">
    .header{
        background: {{ section.settings.bg_color }};
    }
</style>

{% stylesheet %}
    .header{
        padding: 20px;
    }
{% endstylesheet %}

 {% javascript %}
    console.log("Hello, I'm from Header");
{% endjavascript %}

{% schema %}
{
    "name": "header",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_search",
            "label": "Show Search Form?"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color"
        }
    ]
}
{% endschema %}